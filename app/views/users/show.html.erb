<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
          <div class="media-left" title = <%= current_user.email %> >
            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
      </div>
    </div>
  </div>
</div>
